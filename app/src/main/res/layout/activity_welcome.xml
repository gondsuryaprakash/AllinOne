<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.surya.allinone.Welcome">
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"


        >


    <ImageView
        android:padding="10dp"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/fb"
        android:scaleType="centerCrop"
        android:onClick="fb"
        android:src="@drawable/facebook"
        />
    <ImageView
        android:padding="10dp"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/yt"
        android:src="@drawable/youtube"
        android:scaleType="centerCrop"
        android:onClick="yt"
        />
    <ImageView
        android:padding="10dp"
        android:src="@drawable/whatsapp"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/whatsapp"
        android:scaleType="centerCrop"
        android:onClick="whatsapp"
        />
        <ImageView
            android:padding="10dp"
            android:src="@drawable/gmail"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="70dp"
            android:id="@+id/gmail"
            android:onClick="gmail"
            />
        <ImageView
            android:padding="10dp"
            android:src="@drawable/vlc"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/vlc"
            android:onClick="vlc"
            android:scaleType="centerCrop"

            />


    </LinearLayout>
    <LinearLayout

        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="20dp"

        >


        <ImageView

            android:layout_weight="2"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/tw"
            android:scaleType="centerCrop"
            android:onClick="tw"
            android:src="@drawable/twitter"
            />
        <ImageView
            android:padding="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/insta"
            android:scaleType="centerCrop"
            android:onClick="insta"
            android:src="@drawable/instagram"
            />
        <ImageView
            android:padding="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/telegram"

            android:onClick="telegram"
            android:src="@drawable/legram"
            />
        <ImageView
            android:padding="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/maps"
            android:scaleType="centerCrop"
            android:onClick="maps"
            android:src="@drawable/map"

            />
        <ImageView
            android:padding="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/phonepe"
            android:src="@drawable/phonepe"
            android:scaleType="centerCrop"
            android:onClick="phonepe"

            />


    </LinearLayout>

</LinearLayout>
